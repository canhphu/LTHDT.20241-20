<AnchorPane xmlns:fx="http://javafx.com/javafx" prefWidth="1024.0" prefHeight="768.0">

     <!-- Lưới 10 hình vuông -->
     <GridPane layoutX="162" layoutY="244">
          <!-- Hàng 1 -->
          <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
