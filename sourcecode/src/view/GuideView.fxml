          <StackPane GridPane.rowIndex="0" GridPane.columnIndex="1">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="0" GridPane.columnIndex="2">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="0" GridPane.columnIndex="3">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
               <ImageView fitWidth="20" fitHeight="20">
                    <Image url="@/image/small_gem.png"/>
               </ImageView>
          </StackPane>
          <StackPane GridPane.rowIndex="0" GridPane.columnIndex="4">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>

          <!-- Hàng 2 -->
          <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="1" GridPane.columnIndex="2">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="1" GridPane.columnIndex="3">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
          <StackPane GridPane.rowIndex="1" GridPane.columnIndex="4">
               <Rectangle width="140" height="140" fill="LIGHTBLUE" stroke="BLACK" />
          </StackPane>
     </GridPane>

     <!-- Hình bán nguyệt bên trái -->
     <StackPane layoutX="20" layoutY="244">
          <Arc radiusX="140" radiusY="140" startAngle="90" length="180" fill="LIGHTBLUE" stroke="BLACK" strokeWidth="2" />
     </StackPane>

     <!-- Hình bán nguyệt bên phải -->
     <StackPane layoutX="868" layoutY="244">
          <Arc radiusX="140" radiusY="140" startAngle="270" length="180" fill="LIGHTBLUE" stroke="BLACK" strokeWidth="2" />
     </StackPane>

     <!-- Nút Menu màu xanh ở góc trên bên trái -->
     <Button layoutX="900" layoutY="20" text="Menu" style="-fx-background-color: #1E90FF; -fx-text-fill: white;" minWidth="80" minHeight="30"/>

     <!-- Text để set thời gian cạnh nút Menu -->
     <Text layoutX="800" layoutY="40" text="Set Time" style="-fx-pref-width: 150;" />

     <!-- Khung vuông bên trái góc dưới để ảnh -->
     <StackPane layoutX="20" layoutY="20">
          <Rectangle width="140" height="140" fill="LIGHTGRAY" stroke="BLACK" strokeWidth="2"/>
          <ImageView fx:id="backgroundImageHome" fitWidth="140" fitHeight="140">
               <Image url="@/image/home_background.jpg"/>
          </ImageView>
     </StackPane>
     <Label layoutX="180" layoutY="20" style="-fx-font-size: 18px; -fx-text-fill: black;" text="Player1"/>
     <Label layoutX="180" layoutY="60" text="Score: 0" style="-fx-font-size: 18px; -fx-text-fill: black;"/>
     <Label layoutX="180" layoutY="100" text="Score: 0" style="-fx-font-size: 18px; -fx-text-fill: black;"/>
     <!-- Khung vuông bên phải góc dưới để ảnh -->
     <StackPane layoutX="160" layoutY="620">
          <Rectangle width="140" height="140" fill="LIGHTGRAY" stroke="BLACK"/>
     </StackPane>

