<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameView">
   <children>
      <Arc fx:id="halfCircle1" fill="WHITE" length="180.0" radiusX="50.0" radiusY="100.0" startAngle="90.0" stroke="BLACK" strokeType="INSIDE" type="ROUND">
         <HBox.margin>
            <Insets top="120.0" />
         </HBox.margin></Arc>
      <GridPane fx:id="boardGridPane" alignment="CENTER" gridLinesVisible="true" maxHeight="200.0" maxWidth="400.0" prefHeight="300.0" prefWidth="336.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <HBox.margin>
            <Insets top="120.0" />
         </HBox.margin>
      </GridPane>
      <Arc fx:id="halfCircle2" fill="WHITE" length="180.0" radiusX="50.0" radiusY="100.0" startAngle="-90.0" stroke="BLACK" strokeType="INSIDE" type="ROUND">
         <HBox.margin>
            <Insets top="120.0" />
         </HBox.margin></Arc>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="128.0" spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="turnLabel" text="Current Turn: Player 1" />
            <Label fx:id="point1Label" text="Player 1 Score: 0" />
            <Label fx:id="point2Label" text="Player 2 Score: 0" />
            <ComboBox fx:id="directionComboBox" />
            <Button fx:id="spreadButton" onAction="#handleSpreadButtonClick" text="Spread Gems" />
            <Button fx:id="exitBtn" onAction="#ExitBtnClicked" text="Exit Game" />
         </children>
      </VBox>
   </children>
</HBox>
